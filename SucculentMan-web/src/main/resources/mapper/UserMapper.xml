<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tangdou.succulent.manager.mapper.UserMapper">
  <sql id="Base_Column_List">
    id, name, gender, nick_name, avatar, mobile, email, background, pass_word, salt, enabled, locked,
     locked_date, login_date, login_failure_count, login_ip, created_time, modified_time
  </sql>

  <insert id="insert">
    INSERT INTO tb_user
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="name != null">
        name,
      </if>
      <if test="gender != null">
        gender,
      </if>
      <if test="nickName != null">
        nick_name,
      </if>
      <if test="avatar != null">
        avatar,
      </if>
      <if test="mobile != null">
        mobile,
      </if>
      <if test="email != null">
        email,
      </if>
      <if test="passWord != null">
        pass_word,
      </if>
      <if test="salt != null">
        salt,
      </if>
      <if test="enabled != null">
        enabled,
      </if>
      <if test="locked != null">
        locked,
      </if>
      <if test="lockedDate != null">
        locked_date,
      </if>
      <if test="loginDate != null">
        login_date,
      </if>
      <if test="loginFailureCount != null">
        login_failure_count,
      </if>
      <if test="loginIp != null">
        login_ip,
      </if>
      modified_time,
      created_time,
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="name != null">
        #{name},
      </if>
      <if test="gender != null">
        #{gender},
      </if>
      <if test="nickName != null">
        #{nickName},
      </if>
      <if test="avatar != null">
        #{avatar},
      </if>
      <if test="mobile != null">
        #{mobile},
      </if>
      <if test="email != null">
        #{email},
      </if>
      <if test="passWord != null">
        #{passWord},
      </if>
      <if test="salt != null">
        #{salt},
      </if>
      <if test="enabled != null">
        #{enabled},
      </if>
      <if test="locked != null">
        #{locked},
      </if>
      <if test="lockedDate != null">
        #{lockedDate},
      </if>
      <if test="loginDate != null">
        #{loginDate},
      </if>
      <if test="loginFailureCount != null">
        #{loginFailureCount},
      </if>
      <if test="loginIp != null">
        #{loginIp},
      </if>
      now(),
      now(),
    </trim>
  </insert>

  <update id="update">
    UPDATE tb_user
    <set>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="gender != null">
        gender = #{gender},
      </if>
      <if test="avatar != null">
        avatar = #{avatar},
      </if>
      <if test="email != null">
        email = #{email},
      </if>
      <if test="salt != null">
        salt = #{salt},
      </if>
      <if test="passWord != null">
        pass_word = #{passWord},
      </if>
      <if test="background != null">
        background = #{background}
      </if>
    </set>
    WHERE id = #{id}
  </update>

  <select id="selectList" resultType="com.tangdou.succulent.manager.api.user.model.User">
    SELECT
    <include refid="Base_Column_List"/>
    FROM
    tb_user
    <where>
      <if test="mobile != null and mobile != ''">
        mobile = #{mobile}
      </if>
      <if test="name != null and name != ''">
        name = #{name}
      </if>
    </where>
  </select>

  <select id="selectByMobile" resultType="com.tangdou.succulent.manager.api.user.model.User">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tb_user
    WHERE mobile = #{mobile}
  </select>

  <select id="selectForLogin" resultType="com.tangdou.succulent.manager.api.user.model.User">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tb_user
    WHERE
    mobile = #{mobile}
    AND
    pass_word = #{passWord}
  </select>

  <select id="selectById" resultType="com.tangdou.succulent.manager.api.user.model.User">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tb_user
    WHERE
    id = #{id}
  </select>
  <select id="countByNickName" resultType="java.lang.Integer">
    SELECT COUNT(*)
    FROM tb_user
    WHERE
    nick_name = #{nickName}
  </select>

  <select id="selectRandom" resultType="com.tangdou.succulent.manager.api.user.model.User">
    SELECT
    <include refid="Base_Column_List"/>
    FROM tb_user
    ORDER BY rand() limit 5
  </select>

</mapper>